/* pages/home/home.wxss */
.recommend {
  display: flex;
  margin-top: 20rpx;
}

.recommend-item {
  flex:1;
  text-align: center;
  color: #808080;
  padding-bottom: 20rpx;
  border-bottom: 10rpx solid #eee;
}

.recommend-item image{
  width:150rpx;
  height: 200rpx;
}


.goodsContainer{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between
}

.goodsContainer .item{
  width: 48%;
  position: relative
}

.goodsContainer .mainImage{
  width: 100%;
  border-radius: 20rpx;
}



.other_info {
  position: relative;
}

.other_info .price{
  padding-left:60rpx; 
}

.other_info image{
  width: 28rpx; 
  height: 28rpx; 
  left: 140rpx;
  top:8rpx;
  position: absolute;
}

.other_info .fav{
  left: 170rpx;
  top:1rpx;
  position: absolute;
}


.backTop {
  width:100rpx;
  height:100rpx;
  position: fixed;
  right: 10rpx;
  bottom: 20rpx;
}
